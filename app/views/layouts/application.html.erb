<!DOCTYPE html>
<html>
  <head>
    <title>Producthunt</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <%= link_to "Product Hunt", root_path, class: "navbar-brand" %>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navb">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navb">

          <ul class="navbar-nav mr-auto">
          </ul>
          <ul class="navbar-nav">
            <form class="form-inline my-2 my-lg-0">
              <input class="form-control mr-sm-2" type="text" placeholder="Search">
            </form>
            <% if signed_in? %>

            <li class="dropdown mr-sm-2">
              <a href="#" class="dropdown-toggle avatar text-decoration-none" data-toggle="dropdown">
                <%= image_tag current_user.gravatar_url(:rating => 'R', :secure => true), class: "rounded-circle" %>
              </a>
              <ul class="dropdown-menu" role="menu">
                <li class="dropdown-item"><%= link_to "Salir", logout_path, method: :delete, class: "text-decoration-none" %></li>
              </ul>
            </li>
            <li><%= link_to "<i class='fas fa-plus'></i>".html_safe, new_product_path %></li>
            <% else %>
            <li class="nav-item">
              <%= link_to "RegÃ­strate", new_user_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Login", login_path, class: "nav-link" %>
            </li>
             <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <% if flash[:notice] %>
      <div class="alert alert-info">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
